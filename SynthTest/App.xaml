<Application x:Class="SynthTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SynthTest"
             xmlns:vm="clr-namespace:SynthTest.Presentation.ViewModels"
             xmlns:vmM="clr-namespace:SynthTest.Presentation.ViewModels.Modules"
             xmlns:vM="clr-namespace:SynthTest.Presentation.Views.Modules"
             xmlns:v="clr-namespace:SynthTest.Presentation.Views"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <DataTemplate x:Key="InputPortTemplate">
            <Border  Padding="3,2,3,2" Margin="1" Background="LightGray" CornerRadius="5">
                <Grid Background="Transparent" ToolTip="{Binding Name}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Ellipse Grid.Row="1" Width="15" Height="15" 
                         Fill="LightGray" Stroke="White" StrokeThickness="2"
                         Tag="{Binding}" 
                         Cursor="Hand"/>
                    <Ellipse Grid.Row="1" Width="20" Height="20" 
                        Fill="Gray" Stroke="#000" StrokeThickness="1"
                        IsHitTestVisible="False"
                        Panel.ZIndex="-1"
                        Cursor="Hand"/>

                    <TextBlock Text="{Binding Name}" Foreground="Black" 
                   HorizontalAlignment="Center" FontSize="9" Margin="0,2,0,0"/>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="OutputPortTemplate">
            <Border  Padding="3,2,3,2" Margin="1" Background="Black" CornerRadius="5">
                <Grid Margin="1" Background="Black" ToolTip="{Binding Name}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Ellipse Grid.Row="1" Width="15" Height="15" 
                         Fill="LightGray" Stroke="White" StrokeThickness="2"
                         Tag="{Binding}" 
                         Cursor="Hand"/>
                    <Ellipse Grid.Row="1" Width="20" Height="20" 
                        Fill="Gray" Stroke="#000" StrokeThickness="1"
                        IsHitTestVisible="False"
                        Panel.ZIndex="-1"
                        Cursor="Hand"/>

                    <TextBlock  Text="{Binding Name}" Foreground="White" 
                   HorizontalAlignment="Center" FontSize="9" Margin="0,2,0,0"/>
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vmM:OscillatorViewModel}">
            <vM:OscillatorView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vmM:MixerViewModel}">
            <vM:MixerView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vmM:AudioOutputViewModel}">
            <vM:AudioOutputView />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:CableViewModel}">
            <v:CableView />
        </DataTemplate>
    </Application.Resources>
</Application>
