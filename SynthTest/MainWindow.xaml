<Window x:Class="SynthTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SynthTest"
        xmlns:audio="clr-namespace:NAudio.Wave.SampleProviders;assembly=NAudio.Core"
        mc:Ignorable="d"
        Title="Synth" Height="450" Width="800">
    <Grid Margin="20">

        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>-->

        <StackPanel Margin="20">

            <StackPanel>
                <TextBlock Text="VCO 1" Foreground="Black" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="FREQUENCE (Hz)" Foreground="White" FontSize="10"/>
                <Slider Minimum="20" Maximum="2000" Value="{Binding Vco.Frequency}" Margin="0,5,0,15"/>

                <TextBlock Text="FORME D'ONDE" Foreground="White" FontSize="10"/>
                <ComboBox SelectedValue="{Binding Vco.Type}" Margin="0,5">
                    <audio:SignalGeneratorType>Sin</audio:SignalGeneratorType>
                    <audio:SignalGeneratorType>Square</audio:SignalGeneratorType>
                    <audio:SignalGeneratorType>Sawtooth</audio:SignalGeneratorType>
                    <audio:SignalGeneratorType>Triangle</audio:SignalGeneratorType>
                </ComboBox>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="MASTER OUT" HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="VOLUME" Foreground="White" FontSize="10"/>
                <Slider Minimum="0" Maximum="1" Value="{Binding Master.Volume}"/>

                <ToggleButton Content="MUTE" IsChecked="{Binding Master.IsMuted}" Height="30" Margin="0,5"/>

                <UniformGrid Columns="2" Margin="0,15,0,0">
                    <Button Content="START" Click="OnPlayClick" Height="40" Background="#222" Foreground="White"/>
                    <Button Content="STOP" Click="OnStopClick" Height="40" Background="#222" Foreground="White"/>
                </UniformGrid>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
