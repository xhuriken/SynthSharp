<UserControl x:Class="SynthTest.Presentation.Views.PortView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SynthTest.Presentation.Views"
             xmlns:tools="clr-namespace:SynthTest.Presentation.Views.Tools"
             xmlns:vm="clr-namespace:SynthTest.Presentation.ViewModels.Ports"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">

    <UserControl.Resources>
        <tools:BindingProxy x:Key="PortProxy" Data="{Binding}" />
        <tools:BindingProxy x:Key="RackProxy" Data="{Binding DataContext.Rack, RelativeSource={RelativeSource AncestorType=Window}}" />
    </UserControl.Resources>

    <Border x:Name="MainBorder" Padding="3,2,3,2" Margin="1" CornerRadius="5" ToolTip="{Binding Name}">

        <Border.Style>
            <Style TargetType="Border">
                <Setter Property="Background" Value="LightGray"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Type}" Value="Output">
                        <Setter Property="Background" Value="Black"/>
                    </DataTrigger>
                    <DataTrigger Binding="{Binding IsValidDragTarget}" Value="False">
                        <Setter Property="Opacity" Value="0.2"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Border.ContextMenu>
            <ContextMenu>
                <ContextMenu.Resources>
                    <Style TargetType="{x:Type MenuItem}">
                        <Setter Property="Header" Value="Disconnect Cable ❌"/>
                        <Setter Property="Command" Value="{Binding DeleteCommand}"/>
                        <Setter Property="Foreground" Value="DarkRed"/>
                    </Style>
                </ContextMenu.Resources>

                <ContextMenu.ItemsSource>
                    <CompositeCollection>

                        <MenuItem Header="Create Cable" 
                                  Foreground="Black"
                                  Command="{Binding Data.StartCreateCableCommand, Source={StaticResource RackProxy}}"
                                  CommandParameter="{Binding Data, Source={StaticResource PortProxy}}"/>

                        <Separator/>

                        <CollectionContainer Collection="{Binding Data.ConnectedCables, Source={StaticResource PortProxy}}"/>

                    </CompositeCollection>
                </ContextMenu.ItemsSource>
            </ContextMenu>
        </Border.ContextMenu>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Name}" 
                       HorizontalAlignment="Center" 
                       FontSize="9" Margin="0,2,0,0"
                       IsHitTestVisible="False">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="Black"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Type}" Value="Output">
                                <Setter Property="Foreground" Value="White"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <Grid Grid.Row="1" HorizontalAlignment="Center">
                <Ellipse Width="20" Height="20" 
                         Fill="Gray" Stroke="#000" StrokeThickness="1"
                         Panel.ZIndex="-1" IsHitTestVisible="False"/>

                <Ellipse x:Name="AnchorElement"
                         Width="15" Height="15" 
                         StrokeThickness="2"
                         Cursor="Hand">
                    <Ellipse.Style>
                        <Style TargetType="Ellipse">
                            <Setter Property="Fill" Value="LightGray"/>
                            <Setter Property="Stroke" Value="White"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Output">
                                    <Setter Property="Fill" Value="LightGray"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Ellipse.Style>
                </Ellipse>
            </Grid>
        </Grid>

    </Border>
</UserControl>