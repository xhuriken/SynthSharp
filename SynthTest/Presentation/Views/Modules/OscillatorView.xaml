<UserControl x:Class="SynthTest.Presentation.Views.Modules.OscillatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SynthTest.Presentation.Views.Modules"
             mc:Ignorable="d" 
             Width="150" Height="200">
    <Border BorderBrush="#444" BorderThickness="2" Background="#222" CornerRadius="5" Padding="10">
        <StackPanel>
            <TextBlock Text="{Binding Name}" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center"/>

            <TextBlock Text="Frequency" Foreground="White" Margin="0,10,0,0"/>
            <Slider Minimum="50" Maximum="2000" Value="{Binding Frequency}" Margin="0,5"/>
            <TextBlock Text="{Binding Frequency, StringFormat=N0}" Foreground="White" HorizontalAlignment="Center"/>

            <TextBlock Text="Shape" Foreground="White" Margin="0,10,0,0"/>
            <ComboBox ItemsSource="{Binding OscillatorTypes}" SelectedItem="{Binding SelectedType}" Margin="0,5"/>
        </StackPanel>
    </Border>
</UserControl>
