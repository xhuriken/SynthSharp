<UserControl x:Class="SynthTest.Presentation.Views.Modules.OscillatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SynthTest.Presentation.Views.Modules"
             mc:Ignorable="d" 
             Width="150" Height="200">
    <Border Background="#333" BorderBrush="Orange" BorderThickness="2" CornerRadius="5" Padding="5" Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="{Binding Name}" Foreground="Orange" FontWeight="Bold" HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="1" Margin="0,10">
                <TextBlock Text="Frequency" Foreground="White"/>
                <Slider Minimum="50" Maximum="1000" Value="{Binding Frequency}" Margin="0,5"/>
                <TextBlock Text="{Binding Frequency, StringFormat=N0}" Foreground="White" HorizontalAlignment="Center"/>

                <TextBlock Text="Shape" Foreground="White" Margin="0,10,0,0"/>
                <ComboBox ItemsSource="{Binding OscillatorTypes}" SelectedItem="{Binding SelectedType}" Margin="0,5"/>
            </StackPanel>

            <Grid Grid.Row="2">
                <ItemsControl ItemsSource="{Binding Outputs}" ItemTemplate="{StaticResource OutputPortTemplate}" HorizontalAlignment="Right">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </Grid>
        </Grid>
    </Border>
</UserControl>
