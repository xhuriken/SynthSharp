<UserControl x:Class="SynthTest.Presentation.Views.Modules.MixerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SynthTest.Presentation.Views.Modules"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="250">
    <Border BorderBrush="#444" BorderThickness="2" Background="#222" CornerRadius="5" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="MIXER 4CH" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="2">
                    <Slider Orientation="Vertical" 
                            Height="100" 
                            Minimum="0" Maximum="1" 
                            HorizontalAlignment="Center"
                            Value="{Binding Vol1}" />
                    <TextBlock Text="{Binding Vol1, StringFormat=N2}" Foreground="#AAA" HorizontalAlignment="Center" FontSize="10"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="2">
                    <Slider Orientation="Vertical" 
                            Height="100" 
                            Minimum="0" Maximum="1" 
                            HorizontalAlignment="Center"
                            Value="{Binding Vol2}" />
                    <TextBlock Text="{Binding Vol2, StringFormat=N2}" Foreground="#AAA" HorizontalAlignment="Center" FontSize="10"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="2">
                    <Slider Orientation="Vertical" 
                            Height="100" 
                            Minimum="0" Maximum="1" 
                            HorizontalAlignment="Center"
                            Value="{Binding Vol3}" />
                    <TextBlock Text="{Binding Vol3, StringFormat=N2}" Foreground="#AAA" HorizontalAlignment="Center" FontSize="10"/>
                </StackPanel>

                <StackPanel Grid.Column="3" Margin="2">
                    <Slider Orientation="Vertical" 
                            Height="100" 
                            Minimum="0" Maximum="1" 
                            HorizontalAlignment="Center"
                            Value="{Binding Vol4}" />
                    <TextBlock Text="{Binding Vol4, StringFormat=N2}" Foreground="#AAA" HorizontalAlignment="Center" FontSize="10"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Ellipse Grid.Column="0" Width="15" Height="15" Stroke="Gray" Fill="Black" ToolTip="Input 1"/>
                <Ellipse Grid.Column="1" Width="15" Height="15" Stroke="Gray" Fill="Black" ToolTip="Input 2"/>
                <Ellipse Grid.Column="2" Width="15" Height="15" Stroke="Gray" Fill="Black" ToolTip="Input 3"/>
                <Ellipse Grid.Column="3" Width="15" Height="15" Stroke="Gray" Fill="Black" ToolTip="Input 4"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
